<%= render 'list', books: @books %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %>
        <p><%= @book.user.name %></p>
        </td>
         <td><%=@book.title%></td>
         <td><%=@book.body%></td>
         <td>
          <%=link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>
          Edit
          <%end%>
         </td>
         <td>
          <%=link_to book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-sm btn-danger" do %>
          Destroy
          <%end%>
         </td>
      </tr>
    </tbody>
  </table>
