<h1>New book</h1>

<%= form_with model: @book, method: :post do |f| %>
<div class="form-group">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  
	<div class="form-group">
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  </div>
	
	<div class="form-group">
  <%= f.submit 'Create book'%>
  </div>
<% end %>
</div>

