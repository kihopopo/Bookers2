<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model: @user do |f| %>
 <div class="form-group">
 <label for="user_Name">Name</label>
 <input class="form-control name" type="text" autofocus="true" id="user_Name">
 </div>
 <div class="form-group">
 <label for="user_image", class:'form-control-file user_image'>Image</label>
 
 <%= f.file_field:profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
 </div>
 <div class="form-group">
 Introduction
 <label for="inputIntroduction"></label>
  <%= f.text_area :self_introduction, autofocus: true, id:"inputIntroduction", maxlength:"50", size:"50"%>
 </div>
 <div>
 <%= f.submit "Update User",class:"btn btn-secondary" %>
</div>
  
  
  <% end %>
  