<%= render 'books/list', books: @books %>
<div class="col-md-8 offset-md-1">
  <tbody>
  <h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title </th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  <% @books.each do |book| %>
      <tr>
       <td>
          <%= @user.name %>
       </td>
        <td>
          <%= book.title %>
        </td>
        <td>
         <%= book.body %>
        </td>
         <td colspan="3">
         </td>
        </tr>
      </thead>
       <%end%>
    </table>  
  </tbody>
</div>

